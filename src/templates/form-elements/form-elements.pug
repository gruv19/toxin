block content
  main.form-elements
    .form-elements__wrapper
      .form-elements__column
        .form-elements__element.form-elements__element--textfield
          +label("text field", "default")
          +textfield({
            name: "email",
            placeholder: "Email",
            value: ""
          })
        .form-elements__element.form-elements__element--mt-20.form-elements__element--textfield
          +label("text field", "hover/focus")
          +textfield({
            name: "message",
            placeholder: "Message",
            value: "This is pretty awesome"
          })
        .form-elements__element.form-elements__element--mt-20.form-elements__element--dropdown
          +label("dropdown")
          +dropdown({
            label: "Сколько гостей",
            buttons: true,
            list: [
              {name: "adult", label: "Взрослые", value: "0"},
              {name: "child", label: "Дети", value: "0"},
              {name: "baby", label: "Младенцы", value: "0"}
            ]
          })(class="form-elements__dropdown")
        .form-elements__element.form-elements__element--mt-23.form-elements__element--textfield
          +label("masked textfield")
          +masked-textfield("birthday1")
        .form-elements__element.form-elements__element--mt-40.form-elements__element--date-dropdown
          +date-dropdown(class="form-elements__date-dropdown")
        .form-elements__element.form-elements__element--mt-40.form-elements__element--filter-date-dropdown
          +label("filter date dropdown")
          +filter-date-dropdown(class="form-elements__filter-date-dropdown")
        .form-elements__element.form-elements__element--mt-41.form-elements__element--subscribe-form
          +label("subscription text field")
          +subscribe-form("/subscribe")
        
      .form-elements__column
        .form-elements__element.form-elements__checkbox-buttons
          +label("checkbox buttons")
          +checkbox-button({
            state: false, 
            value: "true", 
            name: "smoke", 
            label: "Можно курить"
          })
          +checkbox-button({
            state: true, 
            value: "true", 
            name: "pet", 
            label: "Можно с питомцами"
          })
          +checkbox-button({
            state: true, 
            value: "true", 
            name: "guests", 
            label: "Можно пригласить гостей (до 10 человек)"
          })
        .form-elements__element.form-elements__element--mt-40.form-elements__radio-buttons
          +label("radio buttons")(class="form-elements__label--2-col")
          +radio-button(
            {
              name: "sex",
              label: "Мужчина",
              value: "male",
              state: true,
            },
            {
              name: "sex",
              label: "Женщина",
              value: "female",
              state: false,
            }
          )
        .form-elements__element.form-elements__element--mt-41.form-elements__toggles
          +label("toggle")
          +toggle({
            label: "Получать спецпредложения",
            name: "special",
            value: "true"
          })
          +toggle({
            label: "Получать спецпредложения",
            name: "special",
            value: "false",
          })
        .form-elements__element.form-elements__element--mt-44.form-elements__like-buttons
          +label("like button")(class="form-elements__label--2-col")
          +like-button(false, 2) 
          +like-button(true, 122) 
        .form-elements__element.form-elements__element--mt-40.form-elements__rate-buttons
          +label("rate button")(class="form-elements__label--2-col")
          +rate-button({
            name: "rate-button",
            values: [1, 2, 3, 4, 5],
            start: 4
          })(class="form-elements__rate-button")
          +rate-button({
            name: "rate-button",
            values: [1, 2, 3, 4, 5],
            start: 5
          })(class="form-elements__rate-button")
      
      .form-elements__column
        .form-elements__element.form-elements__element--range-slider
          +range-slider(class="form-elements__range-slider")
        .form-elements__element.form-elements__element--mt-40.form-elements__element--buttons
          +label("buttons")
          .form-elements__flexbox.form-elements__flexbox--mt-11
            +button("click me", "primary")(class="form-elements__button")
            +button("click me", "primary")(class="form-elements__button form-elements__button--primary-hover")
          .form-elements__flexbox.form-elements__flexbox--mt-30
            +button("click me")(class="form-elements__button")
            +button("click me")(class="form-elements__button form-elements__button--hover")
