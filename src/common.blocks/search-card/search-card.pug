include ../../library.blocks/date-dropdown/date-dropdown.pug
include ../../library.blocks/label/label.pug
include ../../library.blocks/dropdown/dropdown.pug
include ../../library.blocks/button/button.pug

mixin search-card
  .search-card
    form.search-card__form.js-search-card__form(method="post", action="search-room")
      fieldset.search-card__fieldset
        legend.search-card__legend Найдём номера под ваши пожелания
        .search-card__date-dropdown
          +date-dropdown('прибытие', 'выезд')
        +label('гости')
        .search-card__dropdown
          +dropdown({
            label: 'Сколько гостей',
            buttons: true,
            list: [
              {name: 'adult', label: 'Взрослые', value: '0'},
              {name: 'child', label: 'Дети', value: '0'},
              {name: 'baby', label: 'Младенцы', value: '0'}
            ]
          })
      +button('Подобрать номер', ['button--full'])
