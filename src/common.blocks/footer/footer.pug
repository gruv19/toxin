include ../widget/widget.pug
include ../../library.blocks/subscribe-form/subscribe-form.pug
include ../copyright/copyright.pug

mixin footer
  footer.footer
    .footer__navigation
      .footer__wrapper
        .footer__logo
          a.footer__link(href="/")
            img.footer__img(src=require('/src/common.blocks/footer/logo.svg'), alt="logo")
          p.footer__info Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        .footer__widgets
          +widget({
            title: 'навигация',
            list: [
              {
                label: 'О нас',
                href: '/about'
              },
              {
                label: 'Новости',
                href: '/news'
              },
              {
                label: 'Служба поддержки',
                href: '/support'
              },
              {
                label: 'Услуги',
                href: '/services'
              }
            ]
          })
          +widget({
            title: 'о нас',
            list: [
              {
                label: 'О сервис',
                href: '/about'
              },
              {
                label: 'Наша команда',
                href: '/news'
              },
              {
                label: 'Вакансии',
                href: '/support'
              },
              {
                label: 'Инвесторы',
                href: '/services'
              }
            ]
          })
          +widget({
            title: 'служба поддержки',
            list: [
              {
                label: 'Соглашения',
                href: '/about'
              },
              {
                label: 'Сообщества',
                href: '/news'
              },
              {
                label: 'Связь с нами',
                href: '/support'
              }
            ]
          })
        .footer__subcribe
          h3.footer__subcribe-title подписка
          .footer__subcribe-info Получайте специальные предложения и новости сервиса
          +subscribe-form('/subscribe')
    .footer__copyright
      +copyright
