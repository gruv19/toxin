        +rangeSlider
        div(style={display: "flex", "justify-content": "space-between", "flex-wrap": "wrap"})
          +button("click me", "full")
        +radioButton(radioData)
        div 
          +toggle(toggleDataChecked)
          +toggle(toggleDataUnchecked)
        +rateButton(rateButtonData)
        div
          +likeButton
          +likeButton(true)
        div
          +pagination
        +bulletList
        div 
          +checkboxButton(false, "wide", "corridor", "Широкий коридор", "Ширина коридоров в номере не менее 91 см.")
          +checkboxButton(false, "helper", "disabled-person", "Помощник для инвалидов", "На 1 этаже вас встретит специалист  и проводит до номера.")
