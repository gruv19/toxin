doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Form Elements
  body.body
    +header({}, false, true, false, false, false, 62)
    main.main
      .main__wrapper.main__wrapper--grid
